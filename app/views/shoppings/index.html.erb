<div>
  <h1 >Shopping List</h1>
  <div >
    <h3 >Amount of food items to buy: <%= @food_amount %></h3>
    <h3 >Total value of food needed: $<%= @total_price %></h3>
  </div>

  <table >
    <thead>
      <tr>
        <th >Food</th>
        <th >Quantity</th>
        <th >Price</th>
        </tr>
    </thead>
    <tbody>
        <% @recipe_foods.each do |recipe_food| %>
      <% recipe_food.each do |recipe_food2| %>
      <tr>
        <th ><%= recipe_food2.food.name %> </th>
        <td><%= recipe_food2.quantity %><%= recipe_food2.food.measurement_unit %> </td>
        <td>  $<%= recipe_food2.food.price*recipe_food2.quantity %></td>
      </tr>
      <% end %>
      <%end %>
   </tbody>
  </table>
</div>

